extends navigation

block content
	.container
		h2.well.text-center FLipkart #{title} Products
		.row
			each product in products
				.col-md-4.col-sm-6.col-lg-3.col-xs-12
					a(href=product.productUrl, target="blank").anchor-section
						.thumbnail.mythumbnail
							.myimgContainer.text-center
								img(src=product.image).img-responsive.myimg.center-block
							hr
							.bg-info.caption.info-section
								.title-section
									strong.text-center= product.title
								.bg-primary
									p.text-center
										strong Max Retail Price : #{product.maximumRetailPrice}/-
									p.text-center
										strong FLipkart Selling Price : #{product.flipkartSellingPrice}/-
								if product.inStock
									p.alert.alert-success
										strong In Stock
								else
									p.alert.alert-warning
										strong Out of Stock